<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.program.education.mapper.AskforleaveMapper">

    <resultMap id="BaseResultMap" type="com.program.education.entity.Askforleave">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="user_id" column="user_id" jdbcType="INTEGER"/>
            <result property="teacher_id" column="teacher_id" jdbcType="INTEGER"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="fromTime" column="fromTime" jdbcType="TIMESTAMP"/>
            <result property="toTime" column="toTime" jdbcType="TIMESTAMP"/>
            <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
            <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,teacher_id,
        content,fromTime,toTime,
        createTime,status
    </sql>
    <sql id="insert">
        user_id,teacher_id,
        content,fromTime,toTime,
        createTime,status
    </sql>
    <insert id="addLeave" parameterType="Askforleave" keyProperty="id">
        insert into askforleave (<include refid="insert"></include>)
        values(#{user_id}, #{teacher_id}, #{content}, #{fromTime}, #{toTime}, #{createTime}, #{status})
    </insert>
    <update id="updateStatus">
        update askforleave
        <set>
            status = #{status}
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
        delete from askforleave where id = #{id}
    </delete>

    <select id="selectAll" resultType="com.program.education.entity.Askforleave">
        select <include refid="Base_Column_List"></include>
        from askforleave
        order by createTime desc
        limit #{offset}, #{limit}
    </select>
    <select id="seletAllById" resultType="com.program.education.entity.Askforleave">
        select <include refid="Base_Column_List"></include>
        from askforleave
        where user_id = #{user_id}
        order by createTime desc
        limit #{offset}, #{limit}
    </select>
</mapper>
