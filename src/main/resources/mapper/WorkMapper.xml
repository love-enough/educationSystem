<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.program.education.mapper.WorkMapper">

    <resultMap id="BaseResultMap" type="com.program.education.entity.Work">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="teacher_id" column="teacher_id" jdbcType="INTEGER"/>
            <result property="title" column="title" jdbcType="VARCHAR"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="file" column="file" jdbcType="VARCHAR"/>
            <result property="create_time" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,teacher_id,title,
        content,file,create_time
    </sql>
    <sql id="insert">
        teacher_id,title,
        content,file,create_time
    </sql>

    <insert id="addWork" parameterType="Work" keyProperty="id">
        insert into work (<include refid="insert"></include>)
        values(#{teacher_id}, #{title}, #{content}, #{file}, #{create_time})
    </insert>

    <delete id="deleteWork">
        delete from work where id = #{id}
    </delete>

    <select id="selectAll" resultType="com.program.education.entity.Work">
        select <include refid="Base_Column_List"></include>
        from work
        order by create_time desc
        limit #{offset}, #{limit}
    </select>

    <select id="selectById" resultType="com.program.education.entity.Work">
        select <include refid="Base_Column_List"></include>
        from work
        where id = #{id}
    </select>
</mapper>
