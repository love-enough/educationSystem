<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.program.education.mapper.ImageMapper">

    <resultMap id="BaseResultMap" type="com.program.education.entity.Image">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="url" column="url" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="INTEGER"/>
            <result property="create_time" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,url,status,
        create_time
    </sql>
    <sql id="insert">
        url,status,
        create_time
    </sql>

    <insert id="addImage" parameterType="Image" keyProperty="id">
        insert into image (<include refid="insert"></include>)
        values(#{url}, #{status}, #{create_time})
    </insert>

    <update id="updateStatus">
        update image set status = #{status}
        where id = #{id}
    </update>

    <select id="selectAll" resultType="com.program.education.entity.Image">
        select <include refid="Base_Column_List"></include>
        from image
    </select>
</mapper>
