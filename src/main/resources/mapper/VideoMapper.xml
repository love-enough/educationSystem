<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.program.education.mapper.VideoMapper">

    <resultMap id="BaseResultMap" type="com.program.education.entity.Video">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="teacher_id" column="teacher_id" jdbcType="INTEGER"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="url" column="url" jdbcType="VARCHAR"/>
            <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,teacher_id,description,
        url,createTime
    </sql>

    <sql id="insert">
        teacher_id,description,
        url,createTime
    </sql>

    <insert id="addVideo" parameterType="Video" keyProperty="id">
        insert into video (<include refid="insert"></include>)
        values(#{teacher_id}, #{description}, #{url}, #{createTime})
    </insert>

    <delete id="deleteById">
        delete from video where id = #{id}
    </delete>

    <select id="selectAll" resultType="com.program.education.entity.Video">
        select <include refid="Base_Column_List"></include>
        from video
        order by createTime desc
        limit #{offset}, #{limit}
    </select>
</mapper>
